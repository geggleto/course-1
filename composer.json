{
    "require": {
        "slim/slim": "^3.8",
        "slim/twig-view": "^2.2"
    },
    "autoload" : {
        "psr-4" : {
            "MyApp\\" : "src"
        }
    },
    "scripts" : {
        "run" : "php -S localhost:8888 -t public public/index.php",
        "run:tests" : "vendor/bin/phpunit --bootstrap tests/bootstrap.php tests"
    },
    "autoload-dev" : {
        "psr-4" : {
            "Tests\\MyApp\\" : "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "paragonie/random_compat": "^2.0"
    }
}
